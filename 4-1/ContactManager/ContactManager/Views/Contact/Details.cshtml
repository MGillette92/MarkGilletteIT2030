@model Contact
@{
    ViewBag.Title = "Contact Details";
}

<h2>Contact Details</h2>
<table class="table table-bordered table-striped">

     
    
    <tr>
        <td>Name:</td>
        <td>@Model.FirstName @Model.LastName</td>
    </tr>
    <tr>
        <td>Phone:</td>
        <td>@Model.Phone</td>
    </tr>
    <tr>
        <td>Email:</td>
        <td>@Model.Email</td>
    </tr>
    <tr>
        <td>Category:</td>
        <td>@Model.CategoryId</td>
    </tr>
    <tr>
        <td>Organization:</td>
        <td>@Model.Organization</td>
    </tr>
    <tr>
        <td>Date Added:</td>
        <td>@Model.DateAdded</td>
    </tr>
    

</table>

<a asp-controller="Contact" asp-action="Edit"
   asp-route-id="@Model.ContactId"
class="btn btn-dark">Edit</a>
<a asp-controller="Contact" asp-action="Delete"
   asp-route-id="@Model.ContactId"
class="btn btn-dark">Delete</a>
<a asp-controller="Home" asp-action="Index" class="btn btn-dark">Home</a>





